
server:
  port: 8084 

spring:
  application:
    name: APIGateway
  cloud:
    gateway:
      mvc:
        routes:
        - id : CUSTOMER-SERVICE
          uri:
            lb://CustomerService
          predicates:
          - Path = /customers/**
 
        - id : PRODUCT-MANAGEMENT-SERVICE
          uri:
            lb://ProductService
          predicates:
          - Path = /customers/**
           


  